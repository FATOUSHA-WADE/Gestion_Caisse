generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}


// ── User 
model User {
  id                Int          @id @default(autoincrement())
  nom               String
  telephone         String       @unique
  email             String?      @unique
  codePin           String       
  role              Role         @default(caissier)
  statut            StatutUser   @default(actif)
  derniereConnexion DateTime?    
  createdAt         DateTime     @default(now()) 
  updatedAt         DateTime     @updatedAt 
  ventes            Vente[]
  mouvements        MouvementStock[]
  notifications     Notification[]
}

// ── Categorie 
model Categorie {
  id          Int              @id @default(autoincrement())
  nom         String           @unique
  description String?
  statut      StatutCategorie  @default(actif)
  createdAt   DateTime         @default(now())
  produits    Produit[]
}

// ── Produit 
model Produit {
  id          Int           @id @default(autoincrement())
  sku         String        @unique
  nom         String
  categorieId Int           
  prixVente   Decimal       @db.Decimal(15,2)
  stock       Int           @default(0)
  stockMin    Int           @default(5) 
  statut      StatutProduit @default(actif)
  image       String?
  createdAt   DateTime      @default(now()) 
  updatedAt   DateTime      @updatedAt
  categorie   Categorie     @relation(fields:[categorieId],references:[id])
  lignes      LigneVente[]
  mouvements  MouvementStock[]
}

// ── Vente 
model Vente {
  id           Int          @id @default(autoincrement())
  reference    String       @unique
  userId       Int          
  total        Decimal      @db.Decimal(15,2)
  modePaiement ModePaiement 
  statut       StatutVente  @default(validee)
  notes        String?
  createdAt    DateTime     @default(now())
  updatedAt   DateTime      @updatedAt
  user         User         @relation(fields:[userId],references:[id])
  lignes       LigneVente[]
  recu         Recu?
}

// ── LigneVente 
model LigneVente {
  id           Int     @id @default(autoincrement())
  venteId      Int     
  produitId    Int     
  quantite     Int
  prixUnitaire Decimal @db.Decimal(15,2)
  sousTotal    Decimal @db.Decimal(15,2)
  vente        Vente   @relation(fields:[venteId],references:[id],onDelete:Cascade)
  produit      Produit @relation(fields:[produitId],references:[id])
}

// ── MouvementStock 
model MouvementStock {
  id            Int           @id @default(autoincrement())
  produitId     Int          
  userId        Int           
  type          TypeMouvement
  quantite      Int
  quantiteAvant Int          
  quantiteApres Int           
  motif         String?
  createdAt     DateTime      @default(now())
  updatedAt   DateTime      @updatedAt 
  produit       Produit       @relation(fields:[produitId],references:[id])
  user          User          @relation(fields:[userId],references:[id])
}

// ── Recu 
model Recu {
   id        Int      @id @default(autoincrement())
  venteId   Int      @unique 
  reference String
  urlPdf    String?  
  imprime   Boolean  @default(false)
  createdAt DateTime @default(now()) 
  updatedAt   DateTime      @updatedAt
  vente     Vente    @relation(fields:[venteId],references:[id],onDelete:Cascade)
}

model Notification {
  id        Int       @id @default(autoincrement())
  userId    Int
  type      NotifType
  titre     String
  message   String
  lu        Boolean   @default(false)
  lienId    Int?
  lienType  String?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, lu])
}

// ── Enums 
enum Role { 
  admin 
  gerant 
  caissier 
  }

enum StatutUser  {
   actif  
   inactif 
  }

enum StatutProduit { 
  actif  
  inactif  
  epuise 
  }

enum StatutCategorie {
   actif  
   inactif 
   }

enum ModePaiement {
   especes  
   carte  
   mobileMoney 
   }
enum StatutVente { 
  validee  
  annulee 
  }

enum TypeMouvement {
   entree
   sortie  
   ajustement 
   }
enum NotifType {
  stock_faible
  stock_rupture
  vente_annulee
  user_cree
  rapport_ca
}
